<tryton>
    <data>
      <!-- Groups -->
      <record model="res.group" id="group_certificate_manager_admin">
          <field name="name">Certificate Manager</field>
      </record>
      <record model="res.user-res.group" id="user_admin_group_smtp_admin">
          <field name="user" ref="res.user_admin"/>
          <field name="group" ref="group_certificate_manager_admin"/>
      </record>

      <!-- Menu Top -->
      <menuitem parent="ir.menu_administration"
          name="Certificate Manager" id="menu_certificate_manager"/>
      <record model="ir.ui.menu-res.group" id="menu_certificate_manager_group_certificate_manager_admin">
          <field name="menu" ref="menu_certificate_manager"/>
          <field name="group" ref="group_certificate_manager_admin"/>
      </record>

      <!-- certificate.manager -->
      <record model="ir.ui.view" id="certificate_manager_view_tree">
            <field name="model">certificate.manager</field>
            <field name="type">tree</field>
            <field name="name">certificate_manager_tree</field>
        </record>
      <record model="ir.ui.view" id="certificate_manager_view_form">
          <field name="model">certificate.manager</field>
            <field name="type">form</field>
          <field name="name">certificate_manager_form</field>
      </record>

      <record model="ir.action.act_window" id="act_certificate_manager_form">
          <field name="name">Certificats</field>
          <field name="res_model">certificate.manager</field>
      </record>
      <record model="ir.action.act_window.view" id="act_certificate_manager_form_view1">
          <field name="sequence" eval="10"/>
          <field name="view" ref="certificate_manager_view_tree"/>
          <field name="act_window" ref="act_certificate_manager_form"/>
      </record>
      <record model="ir.action.act_window.view" id="act_certificate_manager_form_view2">
          <field name="sequence" eval="20"/>
          <field name="view" ref="certificate_manager_view_form"/>
          <field name="act_window" ref="act_certificate_manager_form"/>
      </record>
      <menuitem
          parent="menu_certificate_manager"
          action="act_certificate_manager_form"
          sequence="10"
          id="menu_certificate_manager_form"/>

      <!-- access fields -->
      <record model="ir.model.field.access" id="access_certificate_manager_privatekey">
          <field name="field"
              search="[('name', '=', 'private_key'),('model.model', '=', 'certificate.manager')]"/>
          <field name="perm_read" eval="False"/>
          <field name="perm_write" eval="False"/>
          <field name="perm_create" eval="False"/>
          <field name="perm_delete" eval="False"/>
      </record>
      <record model="ir.model.field.access" id="access_certificate_manager_encryptedprivatekey">
          <field name="field"
              search="[('name', '=', 'encrypted_private_key'),('model.model', '=', 'certificate.manager')]"/>
          <field name="perm_read" eval="False"/>
          <field name="perm_write" eval="False"/>
          <field name="perm_create" eval="False"/>
          <field name="perm_delete" eval="False"/>
      </record>
      <record model="ir.model.field.access" id="access_certificate_manager_certificate">
          <field name="field"
              search="[('name', '=', 'pem_certificate'),('model.model', '=', 'certificate.manager')]"/>
          <field name="perm_read" eval="True"/>
          <field name="perm_write" eval="False"/>
          <field name="perm_create" eval="False"/>
          <field name="perm_delete" eval="False"/>
      </record>
      <record model="ir.model.field.access" id="access_certificate_manager_privatekey_admin">
          <field name="field"
              search="[('name', '=', 'private_key'),('model.model', '=', 'certificate.manager')]"/>
          <field name="group" ref="group_certificate_manager_admin"/>
          <field name="perm_read" eval="True"/>
          <field name="perm_write" eval="True"/>
          <field name="perm_create" eval="True"/>
          <field name="perm_delete" eval="True"/>
      </record>
      <record model="ir.model.field.access" id="access_certificate_manager_encryptedprivatekey_admin">
          <field name="field"
              search="[('name', '=', 'encrypted_private_key'),('model.model', '=', 'certificate.manager')]"/>
          <field name="group" ref="group_certificate_manager_admin"/>
          <field name="perm_read" eval="True"/>
          <field name="perm_write" eval="True"/>
          <field name="perm_create" eval="True"/>
          <field name="perm_delete" eval="True"/>
      </record>
      <record model="ir.model.field.access" id="access_certificate_manager_certificate_admin">
          <field name="field"
              search="[('name', '=', 'pem_certificate'),('model.model', '=', 'certificate.manager')]"/>
          <field name="group" ref="group_certificate_manager_admin"/>
          <field name="perm_read" eval="True"/>
          <field name="perm_write" eval="True"/>
          <field name="perm_create" eval="True"/>
          <field name="perm_delete" eval="True"/>
      </record>
</data>
</tryton>
